@model WedBanSach.Models.Category
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2><i class="bi bi-pencil"></i> Chỉnh sửa danh mục</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CategoryID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Tên danh mục *</label>
                <input asp-for="CategoryName" class="form-control" required />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ParentCategoryID" class="form-label">Danh mục cha</label>
                <select asp-for="ParentCategoryID" class="form-select" asp-items="ViewBag.ParentCategories">
                    <option value="">-- Không có (danh mục gốc) --</option>
                </select>
                <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
