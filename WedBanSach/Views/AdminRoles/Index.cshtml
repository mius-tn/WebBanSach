@model IEnumerable<WedBanSach.Models.Role>
@{
    ViewData["Title"] = "Quản lý Vai trò (Roles)";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-primary">@ViewData["Title"]</h5>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Thêm Vai trò
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Tên Vai trò</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Quyền hạn</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleID</td>
                            <td>
                                <span class="fw-bold">@item.RoleName</span>
                                @if (item.RoleName == "Super Admin")
                                {
                                    <span class="badge bg-danger ms-1">System</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không hoạt động</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.PermissionList.Count quyền
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.RoleID" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (item.RoleName != "Super Admin" && item.RoleName != "Admin" && item.RoleName != "Customer" && item.RoleName != "Staff") 
                                {
                                    <form asp-action="Delete" asp-route-id="@item.RoleID" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa vai trò này?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
