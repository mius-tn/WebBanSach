@model WedBanSach.Models.Role
@{
    ViewData["Title"] = "Chỉnh sửa Vai trò";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var allPermissions = ViewBag.AllPermissions as Dictionary<string, List<string>>;
    var currentPermissions = Model.PermissionList;
    bool isSuperAdmin = Model.RoleName == "Super Admin";

    // Helper local function to translate module names
    string TranslateModule(string module)
    {
        return module switch
        {
            "User" => "Người dùng",
            "Role" => "Vai trò",
            "Product" => "Sản phẩm",
            "Order" => "Đơn hàng",
            "Category" => "Danh mục",
            "Report" => "Báo cáo",
            "Setting" => "Cài đặt",
            "Author" => "Tác giả",
            "Publisher" => "Nhà xuất bản",
            "Shipping" => "Vận chuyển",
            "Payment" => "Thanh toán",
            "Review" => "Đánh giá",
            "Promotion" => "Khuyến mãi",
            "Inventory" => "Kho hàng",
            "Chat" => "Chat hỗ trợ",
            _ => module
        };
    }

    string TranslateAction(string action)
    {
        return action switch
        {
            "View" => "Xem",
            "Create" => "Thêm",
            "Update" => "Sửa",
            "Delete" => "Xóa",
            _ => action
        };
    }
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">@ViewData["Title"]: <span class="text-dark">@Model.RoleName</span></h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="RoleID" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @if (isSuperAdmin)
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> Bạn đang chỉnh sửa vai trò <strong>Super Admin</strong>. Một số tùy chọn sẽ bị khóa để đảm bảo an toàn hệ thống.
                        </div>
                         <input type="hidden" asp-for="RoleName" />
                         <input type="hidden" asp-for="Status" />
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RoleName" class="form-label">Tên Vai trò <span class="text-danger">*</span></label>
                            <input asp-for="RoleName" class="form-control" readonly="@isSuperAdmin" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label">Trạng thái</label>
                            @if (isSuperAdmin)
                            {
                                <input type="text" class="form-control" value="Hoạt động" disabled />
                            } 
                            else 
                            { 
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Hoạt động</option>
                                    <option value="Inactive">Ngừng hoạt động</option>
                                </select>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Nhập mô tả cho vai trò..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <h6 class="mb-3 border-bottom pb-2 text-uppercase fw-bold text-secondary">
                        <i class="bi bi-shield-check me-2"></i>Phân quyền chức năng
                    </h6>
                    
                    <div class="row">
                        @foreach (var module in allPermissions)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 border bg-light shadow-sm">
                                    <div class="card-header bg-white border-bottom-0 fw-bold text-primary">
                                        <i class="bi bi-gear-fill me-1"></i> Quản lý @TranslateModule(module.Key)
                                    </div>
                                    <div class="card-body pt-2">
                                        <div class="row">
                                            @foreach (var permission in module.Value)
                                            {
                                                var actionName = permission.Split('.').Last();
                                                var isChecked = currentPermissions.Contains(permission);
                                                // Disable checkboxes for Super Admin (always full access)
                                                var isDisabled = isSuperAdmin; 

                                                <div class="col-6 mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" name="selectedPermissions" value="@permission" id="perm_@permission.Replace(".", "_")" @(isChecked ? "checked" : "") @(isDisabled ? "disabled" : "")>
                                                        <label class="form-check-label user-select-none" for="perm_@permission.Replace(".", "_")">
                                                            @TranslateAction(actionName)
                                                        </label>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Lưu Vai trò
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
