@model WedBanSach.Models.Publisher
@{
    ViewData["Title"] = "Thêm nhà xuất bản";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2><i class="bi bi-plus-circle"></i> Thêm nhà xuất bản</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PublisherName" class="form-label">Tên nhà xuất bản *</label>
                <input asp-for="PublisherName" class="form-control" required />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
