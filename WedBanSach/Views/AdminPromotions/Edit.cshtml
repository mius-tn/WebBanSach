@model WedBanSach.Models.Promotion
@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2><i class="bi bi-pencil"></i> Chỉnh sửa khuyến mãi</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="PromotionID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PromotionName" class="form-label">Tên chương trình</label>
                <input asp-for="PromotionName" class="form-control" />
                <span asp-validation-for="PromotionName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DiscountType" class="form-label">Loại giảm giá</label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Percent">Phần trăm (%)</option>
                            <option value="Amount">Số tiền (VNĐ)</option>
                        </select>
                        <span asp-validation-for="DiscountType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DiscountValue" class="form-label">Giá trị</label>
                        <input asp-for="DiscountValue" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
