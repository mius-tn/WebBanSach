@model IEnumerable<WedBanSach.Models.Book>
@{
    ViewData["Title"] = "Quản lý Tồn kho";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2><i class="bi bi-box-seam"></i> Quản lý Tồn kho</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm sách..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search"></i> Tìm
                </button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên sách</th>
                        <th>ISBN</th>
                        <th>Tồn kho hiện tại</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.BookID</td>
                            <td><strong>@book.Title</strong></td>
                            <td>@book.ISBN</td>
                            <td>
                                <span class="badge @(book.StockQuantity < 10 ? "bg-danger" : book.StockQuantity < 50 ? "bg-warning" : "bg-success")" style="font-size: 1rem;">
                                    @book.StockQuantity
                                </span>
                            </td>
                            <td>
                                @if (book.StockQuantity < 10)
                                {
                                    <span class="badge bg-danger">Sắp hết</span>
                                }
                                else if (book.StockQuantity == 0)
                                {
                                    <span class="badge bg-dark">Hết hàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Còn hàng</span>
                                }
                            </td>
                            <td>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="@($"#updateModal{book.BookID}")">
                                    <i class="bi bi-pencil"></i> Cập nhật
                                </button>
                                <a href="@Url.Action("Logs", new { bookId = book.BookID })" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-clock-history"></i> Lịch sử
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modals - Đặt bên ngoài table -->
@foreach (var book in Model)
{
    <!-- Update Modal -->
    <div class="modal fade" id="updateModal@(book.BookID)" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-action="UpdateStock">
                    <input type="hidden" name="bookId" value="@book.BookID" />
                    <div class="modal-header">
                        <h5 class="modal-title">Cập nhật tồn kho: @book.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Số lượng hiện tại</label>
                            <input type="number" class="form-control" value="@book.StockQuantity" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số lượng mới *</label>
                            <input type="number" name="quantity" class="form-control" min="0" value="@book.StockQuantity" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Lý do</label>
                            <input type="text" name="reason" class="form-control" placeholder="Nhập hàng, Điều chỉnh, ..." />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}