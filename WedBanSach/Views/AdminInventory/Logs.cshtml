@model IEnumerable<WedBanSach.Models.InventoryLog>
@{
    ViewData["Title"] = "Lịch sử tồn kho";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-clock-history"></i> Lịch sử tồn kho</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ngày giờ</th>
                        <th>Thay đổi</th>
                        <th>Lý do</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>
                                <span class="badge @(log.ChangeQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @(log.ChangeQuantity > 0 ? "+" : "")@log.ChangeQuantity
                                </span>
                            </td>
                            <td>@log.Reason</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
