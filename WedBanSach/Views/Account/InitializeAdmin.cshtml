@{
    ViewData["Title"] = "Khởi tạo Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .init-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            max-width: 600px;
            width: 100%;
            padding: 40px;
        }
    </style>
</head>
<body>
    <div class="init-container">
        <div class="text-center mb-4">
            <i class="bi bi-gear-fill" style="font-size: 3rem; color: #667eea;"></i>
            <h2 class="mt-3">Khởi tạo Admin</h2>
            <p class="text-muted">Tạo tài khoản Administrator mặc định</p>
        </div>

        <div id="result" class="alert" style="display: none;"></div>

        <div class="text-center">
            <button type="button" class="btn btn-primary btn-lg" onclick="initializeAdmin()">
                <i class="bi bi-play-circle"></i> Khởi tạo Admin
            </button>
        </div>

        <div class="mt-4 p-3 bg-light rounded">
            <h6><i class="bi bi-info-circle"></i> Thông tin đăng nhập mặc định:</h6>
            <ul class="mb-0">
                <li><strong>Email:</strong> admin@bookstore.com</li>
                <li><strong>Password:</strong> Admin@123</li>
            </ul>
            <small class="text-danger"><i class="bi bi-exclamation-triangle"></i> Vui lòng đổi mật khẩu sau khi đăng nhập!</small>
        </div>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Login")" class="btn btn-link">
                <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
            </a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function initializeAdmin() {
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = 'block';
            resultDiv.className = 'alert alert-info';
            resultDiv.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang khởi tạo...';

            fetch('@Url.Action("InitializeAdmin", "Account")', {
                method: 'POST'
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        resultDiv.className = 'alert alert-success';
                        resultDiv.innerHTML = `
                            <h5><i class="bi bi-check-circle"></i> ${data.message}</h5>
                            <hr>
                            <p><strong>Email:</strong> ${data.email}</p>
                            <p><strong>Password:</strong> ${data.password}</p>
                            <p class="text-warning mb-0"><i class="bi bi-exclamation-triangle"></i> ${data.note}</p>
                            <div class="mt-3">
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập ngay
                                </a>
                            </div>
                        `;
                    } else {
                        resultDiv.className = 'alert alert-warning';
                        resultDiv.innerHTML = `
                            <h5><i class="bi bi-info-circle"></i> ${data.message}</h5>
                            ${data.email ? `<p><strong>Email:</strong> ${data.email}</p>` : ''}
                        `;
                    }
                })
                .catch(error => {
                    resultDiv.className = 'alert alert-danger';
                    resultDiv.innerHTML = `<h5><i class="bi bi-x-circle"></i> Lỗi: ${error.message}</h5>`;
                });
        }

        // Tự động chạy khi trang load (optional - có thể bỏ comment nếu muốn)
        // window.onload = function() {
        //     initializeAdmin();
        // };
    </script>
</body>
</html>
