@using WedBanSach.Models
@model IEnumerable<WedBanSach.Models.PaymentSetting>
@{
    ViewData["Title"] = "Cấu hình Thanh toán";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
    <div class="card-header border-0 py-3 d-flex justify-content-between align-items-center" style="background-color: #fce4ec;">
        <h4 class="mb-0 fw-bold" style="color: #444;"><i class="bi bi-gear-fill me-2"></i> Cấu hình Phương thức thanh toán</h4>
        <a asp-action="Index" class="btn btn-sm rounded-pill px-4 fw-bold" style="background-color: #fff; color: #444; border: 1px solid #f8bbd0;">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    @foreach (var method in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle p-3 me-3" style="background-color: #fce4ec;">
                                <i class="bi @(method.MethodName == "COD" ? "bi-cash" : "bi-bank") text-danger fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-0">@(method.MethodName == "Bank Transfer" ? "Chuyển khoản" : method.MethodName)</h5>
                                <small class="text-muted">@method.Description</small>
                            </div>
                        </div>
                        <div class="form-check form-switch ps-0">
                           <span class="badge rounded-pill px-3 @(method.IsEnabled ? "bg-success-subtle text-success" : "bg-light text-muted")">
                               @(method.IsEnabled ? "Đang bật" : "Đang tắt")
                           </span>
                        </div>
                    </div>

                    <form asp-action="UpdateSetting" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@method.PaymentSettingID" />
                        
                        <div class="mb-3 d-flex align-items-center justify-content-between">
                            <label class="fw-bold small text-uppercase text-muted">Trạng thái hoạt động</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="isEnabled" value="true" @(method.IsEnabled ? "checked" : "") style="width: 3em; height: 1.5em; cursor: pointer;">
                            </div>
                        </div>

                        @if (method.MethodName == "Bank Transfer" || method.MethodName == "Chuyển khoản")
                        {
                            <hr class="text-pink">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Mã Ngân hàng (VietQR)</label>
                                <input type="text" name="bankCode" value="@(ViewBag.BankTransfer?.BankCode ?? method.BankCode)" class="form-control" placeholder="Ví dụ: MB, VCB, ACB..." />
                                <div class="form-text">Nhập mã ngân hàng ngắn gọn (Ví dụ: MB, VCB, BIDV...) để tạo mã QR.</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tên Ngân hàng (Hiển thị)</label>
                                <input type="text" name="bankName" value="@method.BankName" class="form-control" placeholder="Ví dụ: MB Bank, Vietcombank..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Số tài khoản</label>
                                <input type="text" name="accountNumber" class="form-control rounded-pill px-4 border-pink" value="@method.AccountNumber" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Chủ tài khoản (Viết hoa không dấu)</label>
                                <input type="text" name="accountHolder" class="form-control rounded-pill px-4 border-pink" value="@method.AccountHolder" placeholder="Ví dụ: NGUYEN VAN A" required>
                                <small class="text-muted ms-3">Phải khớp chính xác với tên đăng ký tại ngân hàng.</small>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Mã QR Thanh toán (Tùy chọn ảnh tĩnh)</label>
                                @if (!string.IsNullOrEmpty(method.QRCodeUrl))
                                {
                                    <div class="mb-2">
                                        <img src="@method.QRCodeUrl" class="img-thumbnail rounded-4" style="max-height: 150px;">
                                    </div>
                                }
                                <input type="file" name="qrCode" class="form-control rounded-pill border-pink" accept="image/*">
                            </div>
                        }

                        <button type="submit" class="btn w-100 rounded-pill py-2 fw-bold mt-3" style="background-color: #f8bbd0; color: #444; border: none;">
                            <i class="bi bi-save me-1"></i> Lưu thay đổi
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .border-pink { border-color: #f8bbd0 !important; }
    .text-pink { color: #f8bbd0; }
    .form-check-input:checked {
        background-color: #f48fb1;
        border-color: #f48fb1;
    }
</style>
