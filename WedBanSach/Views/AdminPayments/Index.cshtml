@model IEnumerable<WedBanSach.Models.Payment>
@{
    ViewData["Title"] = "Quản lý Thanh toán";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
    <div class="card-header border-0 py-3 d-flex justify-content-between align-items-center" style="background-color: #fce4ec;">
        <h4 class="mb-0 fw-bold" style="color: #444;"><i class="bi bi-credit-card me-2"></i> Lịch Sử Thanh toán</h4>
        <a asp-action="Settings" class="btn btn-sm rounded-pill px-4 fw-bold" style="background-color: #f8bbd0; color: #444;">
            <i class="bi bi-gear-fill me-1"></i> Cấu hình thanh toán
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white h-100">
            <div class="d-flex align-items-center">
                <div class="rounded-circle p-3 me-3" style="background-color: #e8f5e9;">
                    <i class="bi bi-cash-stack text-success fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold text-uppercase">Tổng doanh thu thực tế</div>
                    <div class="fs-4 fw-bold text-success">@string.Format("{0:N0}", ViewBag.TotalRevenue ?? 0) đ</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white h-100">
            <div class="d-flex align-items-center">
                <div class="rounded-circle p-3 me-3" style="background-color: #fffde7;">
                    <i class="bi bi-clock-history text-warning fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold text-uppercase">Doanh thu đang chờ</div>
                    <div class="fs-4 fw-bold text-warning">@string.Format("{0:N0}", ViewBag.PendingRevenue ?? 0) đ</div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4">
        <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-header bg-white py-3 border-0">
        <form method="get" class="row g-2">
            <div class="col-md-3">
                <select name="status" class="form-select rounded-pill px-4 border-pink">
                    <option value="">Tất cả trạng thái</option>
                    @foreach (var s in ViewBag.Statuses as string[])
                    {
                        <option value="@s" selected="@(ViewBag.Status == s)">@s</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-pink rounded-pill w-100 fw-bold">
                    <i class="bi bi-funnel"></i> Lọc
                </button>
            </div>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">ID</th>
                    <th>Đơn hàng</th>
                    <th>Khách hàng</th>
                    <th>Số tiền</th>
                    <th>Ngày giao dịch</th>
                    <th>Trạng thái</th>
                    <th class="text-end pe-4">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td class="ps-4">#@payment.PaymentID</td>
                        <td>
                            <a href="@Url.Action("Details", "AdminOrders", new { id = payment.OrderID })" class="text-decoration-none fw-bold text-primary">
                                #@payment.OrderID
                            </a>
                        </td>
                        <td>
                            <div class="fw-bold">@payment.Order?.User?.FullName</div>
                            <div class="small text-muted">@payment.Order?.User?.Email</div>
                        </td>
                        <td>
                            <span class="text-danger fw-bold">@string.Format("{0:N0}", payment.Amount) đ</span>
                        </td>
                        <td>@payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <span class="badge rounded-pill px-3 @GetStatusBadgeClass(payment.PaymentStatus)">
                                @(payment.PaymentStatus == "Paid" ? "Đã thanh toán" : 
                                  payment.PaymentStatus == "Pending" ? "Đang chờ" : 
                                  payment.PaymentStatus == "Failed" ? "Thất bại" : "Hoàn tiền")
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                <input type="hidden" name="id" value="@payment.PaymentID" />
                                <select name="status" class="form-select form-select-sm rounded-pill d-inline-block shadow-none border-pink" style="width: auto; cursor: pointer;" onchange="this.form.submit()">
                                    <option value="Pending" selected="@(payment.PaymentStatus == "Pending")">Chờ</option>
                                    <option value="Paid" selected="@(payment.PaymentStatus == "Paid")">Đã trả</option>
                                    <option value="Failed" selected="@(payment.PaymentStatus == "Failed")">Hủy</option>
                                    <option value="Refunded" selected="@(payment.PaymentStatus == "Refunded")">Hoàn</option>
                                </select>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .border-pink { border-color: #f8bbd0 !important; }
    .btn-outline-pink {
        color: #444;
        border-color: #f8bbd0;
    }
    .btn-outline-pink:hover {
        background-color: #f8bbd0;
        color: #444;
    }
    .badge.bg-success { background-color: #c8e6c9 !important; color: #2e7d32 !important; }
    .badge.bg-warning { background-color: #fff9c4 !important; color: #f9a825 !important; }
    .badge.bg-danger { background-color: #ffcdd2 !important; color: #c62828 !important; }
    .badge.bg-secondary { background-color: #f5f5f5 !important; color: #616161 !important; }
</style>

@functions {
    private string GetStatusBadgeClass(string? status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning",
            "Failed" => "bg-danger",
            "Refunded" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
